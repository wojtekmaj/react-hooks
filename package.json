{
  "name": "@wojtekmaj/react-hooks",
  "version": "1.13.0",
  "description": "A collection of React Hooks.",
  "main": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "yarn build-esm && yarn build-umd",
    "build-esm": "BABEL_ENV=production-esm babel src -d dist/esm --ignore \"**/*.spec.js\"",
    "build-umd": "BABEL_ENV=production-umd babel src -d dist/umd --ignore \"**/*.spec.js\"",
    "clean": "rimraf dist",
    "jest": "jest --testEnvironment jsdom",
    "jest:node": "jest --testEnvironment node",
    "lint": "eslint src/ --ext .jsx,.js",
    "postinstall": "husky install",
    "prepack": "yarn clean && yarn build",
    "test": "yarn lint && yarn jest && yarn jest:node"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.15.0",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@testing-library/react-hooks": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-wojtekmaj": "^0.6.5",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-test-renderer": "^17.0.0",
    "rimraf": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "resolutions": {
    "semver@7.0.0": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wojtekmaj/react-hooks.git"
  },
  "funding": "https://github.com/wojtekmaj/react-hooks?sponsor=1",
  "packageManager": "yarn@3.1.0"
}
